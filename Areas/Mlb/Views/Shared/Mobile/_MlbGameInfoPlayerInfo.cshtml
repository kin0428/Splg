                            {
                                <h5 class="right fs14">［@winPitcher.TeamNameS］@Html.ActionLink(@winPitcher.PlayerNameS, "Index", "MlbTeamInfoPitcherDetail", new { area = "Mlb", teamID = @winPitcher.TeamID, playerID = @winPitcher.PlayerID }, null)</h5>
