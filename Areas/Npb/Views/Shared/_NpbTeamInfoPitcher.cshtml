@using Splg;
@using Splg.Areas.Npb.Models.ViewModel.InfosModel;
@model Splg.Areas.Npb.Models.ViewModel.NpbTeamInfoPlayerViewModel
@{
    // Namespace	: Splg.Areas.Npb.Models.ViewModel
    // FileName		: _NpbTeamInfoPitcher.cshtml
    // Developer	: Nguyen Minh Kiet
    // Update date  : 2015-03-19
    // Html No      : 8-5-4  
}
<!-- InstanceBeginEditable name="content" -->
<div class="evt_block09">   
    @Html.Partial("~/Areas/Npb/Views/Shared/_NpbTeamInfoMenu.cshtml")
    <div class="space"> </div>
    @if (Model.TeamInfoPitchingInfos != null && Model.TeamInfoPitchingInfos.Any())
    {
        int intCountTbl1 = 0;
        string feedtabTbl1;

        int intCountTbl2 = 0;
        string feedtabTbl2;        
           <p class="feed_rank">   
            @foreach (var item in Model.TeamInfoPitchingInfos)
{
    intCountTbl1++;
    feedtabTbl1 = string.Format("{0}{1}", "feedtab", intCountTbl1);
    <a class="anchor1" onclick="return false" data-target="@feedtabTbl1" href="#">@item.Name</a>
    if (intCountTbl1 < Model.TeamInfoPitchingInfos.Count())
    {
                        @("/")     
                }    
            }     
        </p>
        <div class="space20"> </div>         
        foreach (var item in Model.TeamInfoPitchingInfos)
        {
            intCountTbl2++;
            feedtabTbl2 = string.Format("{0}{1}", "feedtab", intCountTbl2);                 
            decimal earnedValue = 0;
            <div class="space"> </div>         
            <div id="@feedtabTbl2">
                <dl class="feed_title">
                    <dt>@item.Num</dt>
                    <dd><a href="@Url.Action("Index", "NpbTeamInfoPitcherDetail", new { area = "Npb", teamID = @item.TeamCD, playerID = @item.playerMSTCD }, null)">@item.Name</a></dd>
                </dl>
                <div class="row">
				    <dl class="feed_row">
					    <dt>防御率</dt>
					    <dd><span class="fs18 bold">@(decimal.TryParse(item.EarnedRunAverage, out earnedValue) == true ? Math.Round(earnedValue, 2, MidpointRounding.ToEven).ToString("0.00") : "-")</span></dd>
				    </dl>
				    <dl class="feed_row">
					    <dt>試合数</dt>
					    <dd><span class="fs18 bold">@(item.PlayerCD == null ? "-" : item.Game.ToString())</span></dd>
				    </dl>
				    <dl class="feed_row">
					    <dt>勝利</dt>
					    <dd><span class="fs18 bold">@(item.PlayerCD == null ? "-" : item.Win.ToString())</span></dd>
				    </dl>
				    <dl class="feed_row">
					    <dt>敗戦</dt>
                        <dd><span class="fs18 bold">@(item.PlayerCD == null ? "-" : item.Lost.ToString())</span></dd>
				    </dl>
			    </div>	                 
                <div class="row">
				    <dl class="feed_row">
					    <dt>セーブ数</dt>
					    <dd><span class="fs18 bold">@(item.PlayerCD == null ? "-" : item.Save.ToString())</span></dd>
				    </dl>
				    <dl class="feed_row">
					    <dt>投球回数</dt>
					    <dd><span class="fs18 bold">@(item.PlayerCD == null ? "-" : item.Display.ToString())</span></dd>
				    </dl>				   
                 </div>
             </div>
        }
    }
    </div>
<!-- InstanceEndEditable -->