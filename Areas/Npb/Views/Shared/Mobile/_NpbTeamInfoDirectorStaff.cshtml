@using Splg;
@using Splg.Areas.Npb.Models.ViewModel.InfosModel;
@model Splg.Areas.Npb.Models.ViewModel.NpbTeamInfoPlayerViewModel
@{
    // Namespace	: Splg.Areas.Npb.Models.ViewModel
    // FileName		: _NpbTeamInfoDirectorStaff.cshtml
    // Device       : Mobile
    // Developer	: Nguyen Minh Kiet
    // Update date  : 2015-04-06
    // Html No      : 8-5-6    
}
@Html.Partial("~/Areas/Npb/Views/Shared/Mobile/_NpbTeamInfoMenu.cshtml")
<section class="block_2 clear">
    <div class="clear">
        <p class="sub-text fs8"></p>
        <h3 id="a01" class="subtitle3">監督・スタッフ</h3>
    </div>
    @if (Model !=null && Model.TeamInfoDirectorStaffInfos != null && Model.TeamInfoDirectorStaffInfos.Any())
    {
        string strStaffTitle = string.Empty;
        <ul class="team-list">
        @foreach (var item in Model.TeamInfoDirectorStaffInfos)
        {    
          <li class="has_title">
            @if (!item.StaffTitle.Equals(strStaffTitle))
            {
                strStaffTitle = item.StaffTitle;             
                <h3 class="gr_title">@item.StaffTitle</h3>                             
            }                            
            <p class="num fs15">@item.BackNumber</p>
            <div>
                <h4><a href="#">@item.PlayerName</a></h4>
                <ul class="jinfo">
                    <li>満年齢 <span class="fs15">@(item.PlayerCD == null ? "-" : item.Age.ToString())</span></li>
                    <li>経歴 <span class="fs15">@(item.PlayerCD == null ? "-" : item.Career.ToString())</span></li>
                </ul>
            </div>
        </li>
        }
    </ul>
}
