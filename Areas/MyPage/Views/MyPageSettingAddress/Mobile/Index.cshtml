@if (Model != null)
{
<section class="block_7">
	<h3 class="sigtitle">メールアドレス変更</h3>						
	<div class="sig-frm">
		<dl>								
			<dt>新しいメールアドレス</dt>
			<dd><input type="email" value="" id="entry_mail"></dd>
			<dt>パスワード</dt>
			<dd><input type="password" value="" id="entry_password"></dd>
		</dl>
		<p class="sig-submit">
            <a id="settingssendnewaddress">メールを送信</a>
		</p>
	</div>
</section>

}