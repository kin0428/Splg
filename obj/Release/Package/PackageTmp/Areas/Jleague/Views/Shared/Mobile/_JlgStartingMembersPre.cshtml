@{
    // FileName : Splg\Areas\Jleague\Views\Shared\Mobile\_JlgPointEdit.cshtml
}
@using Splg.Core.Constant;
@model Splg.Areas.Jleague.Models.ViewModel.JlgGameInfoViewModel
@if (Model != null)
{

        <!-- 前節のスターティングメンバー -->
        <div class="socData socStarters">
            <h2 class="socData-hdg">@(Model.FormationChartDto.StartingTypeForDisplay)スターティングメンバー</h2>

            <!-- socStartersSwitch -->
            <ul class="socStartersSwitch clear">
                <li id="socStSwitchHome" class="active">
                    <div class="socStartersSwitch-panel">
                        <img src="@Url.Content(Model.homeTeamSpec.TeamIconUrl)" alt="@Model.homeTeamSpec.TeamName" class="socStartersSwitch-teamIcon">
                        <p>@Model.homeTeamSpec.TeamName</p>
                        <p class="socStartersSwitch-system">@Model.homeTeamSpec.FormationName</p>
                    </div>
                </li>
                <li id="socStSwitchAway">
                    <div class="socStartersSwitch-panel">
                        <img src="@Url.Content(Model.awayTeamSpec.TeamIconUrl)" alt="@Model.awayTeamSpec.TeamName" class="socStartersSwitch-teamIcon">
                        <p>@Model.awayTeamSpec.TeamName</p>
                        <p class="socStartersSwitch-system">@Model.awayTeamSpec.FormationName</p>
                    </div>
                </li>
            </ul>
            <!-- /socStartersSwitch -->

            <p class="socStarters-subHdg">@(Model.FormationChartDto.StartingTypeForDisplay)スターティングメンバー</p>
            <!-- socStPowerSwitch -->
            <ul class="socStPowerSwitch clear">
                <li class="socStPowerSwitch-of active">攻撃力</li>
                <li class="socStPowerSwitch-df">守備力</li>
            </ul>
            <!-- /socStPowerSwitch -->
            <!-- socStartersTabHome -->
            <div id="socStartersTabHome" class="socStartersTab stTabActive">

                <!-- socStatusTab -->
                <div class="socStPowerTab-of socStPowerTab stTabActive">
                    <p class="socStPowerHdg">チームの攻撃力<span class="socTxtColor-of">@Model.homeTeamSpec.TeamAttackCBP</span></p>
                    @Html.Partial("_JlgStartingAttack", Model.homePlayerSpec)
                </div>
                <div class="socStPowerTab-df socStPowerTab">
                    <p class="socStPowerHdg">チームの守備力<span class="socTxtColor-df">@Model.homeTeamSpec.TeamDefenseCBP</span></p>
                    @Html.Partial("_JlgStartingDefense", Model.homePlayerSpec)
                </div>
                <!-- /socStatusTab -->
                <!-- 欠場選手情報-->
                @Html.Partial("_JlgInjuredMembers", Model.HomeInjuredMembers)
                <!-- 出場停止選手情報-->
                @Html.Partial("_JlgSuspendedMembers", Model.HomeSuspendedMembers)
            </div>
            <!-- /socStartersTabHome -->
            <!-- socStartersTabAway -->
            <div id="socStartersTabAway" class="socStartersTab">

                <!-- socStatusTab -->
                <div class="socStPowerTab-of socStPowerTab">
                    <p class="socStPowerHdg">チームの攻撃力<span class="socTxtColor-of">@Model.awayTeamSpec.TeamAttackCBP</span></p>
                    @Html.Partial("_JlgStartingAttack", Model.awayPlayerSpec)
                </div>
                <div class="socStPowerTab-df socStPowerTab">
                    <p class="socStPowerHdg">チームの守備力<span class="socTxtColor-df">@Model.awayTeamSpec.TeamDefenseCBP</span></p>
                    @Html.Partial("_JlgStartingDefense", Model.awayPlayerSpec)
                </div>
                <!-- /socStatusTab -->
                <!-- 欠場選手情報-->
                @Html.Partial("_JlgInjuredMembers", Model.AwayInjuredMembers)
                <!-- 出場停止選手情報-->
                @Html.Partial("_JlgSuspendedMembers", Model.AwaySuspendedMembers)
            </div>
        </div>
        <!-- /socStartersTab2 -->
}


