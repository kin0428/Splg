<div id="npbGameInfoWeek">
    @{

        var now = DateTime.Now;
        var month = now.Month < 10 ? "0" + now.Month.ToString() : now.Month.ToString();
        var day = now.Day < 10 ? "0" + now.Day.ToString() : now.Day.ToString();
        var currentDate = string.Format("{0}{1}{2}", now.Year, month, day);
    }
    @Html.Action("ShowGameInfo", "NpbTop", new { area = "Npb", type = 2, startDate = currentDate, endDate = currentDate })
</div>
