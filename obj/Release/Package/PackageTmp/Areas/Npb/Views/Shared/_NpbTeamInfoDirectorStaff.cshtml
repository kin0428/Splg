}
	<!-- InstanceBeginEditable name="content" -->
<div class="evt_block09">
    @Html.Partial("~/Areas/Npb/Views/Shared/_NpbTeamInfoMenu.cshtml")
    <div class="space"></div>
    @if (Model.TeamInfoDirectorStaffInfos != null && Model.TeamInfoDirectorStaffInfos.Any())
{
    int intCountTbl1 = 0;
    string feedtabTbl1;

    int intCountTbl2 = 0;
    string feedtabTbl2;
    <p class="feed_rank">
        @foreach (var item in Model.TeamInfoDirectorStaffInfos)
{
    intCountTbl1++;
    feedtabTbl1 = string.Format("{0}{1}", "feedtab", intCountTbl1);
    <a class="anchor1" onclick="return false" data-target="@feedtabTbl1" href="#">@item.PlayerName</a>
    if (intCountTbl1 < Model.TeamInfoDirectorStaffInfos.Count())
    {
                @("/")
            }
        }
    </p>
       <div class="space20"> </div>         
        foreach (var item in Model.TeamInfoDirectorStaffInfos)
        {
            intCountTbl2++;
            feedtabTbl2 = string.Format("{0}{1}", "feedtab", intCountTbl2);        
            <div class="space"> </div>    
            <div id="@feedtabTbl2">
                <dl class="feed_title">
                    <dt>@item.BackNumber</dt>
                    <dd>@item.PlayerName</dd>
                </dl>
                <div class="row">
                    <dl class="feed_row_last1">
                        <dt>肩書</dt>
                        <dd><span class="fs18 bold">@item.StaffTitle</span></dd>
                    </dl>
                </div>
                <div class="row">
                    <dl class="feed_row_last1">
                        <dt>満年齢</dt>
                        <dd><span class="fs18 bold">@(item.PlayerCD == null ? "-" : item.Age.ToString()) 歳</span></dd>
                    </dl>
                </div>
                <div class="row">
                    <dl class="feed_row_last1">
                        <dt>経歴</dt>
                        <dd><span class="fs14">@(item.PlayerCD == null ? "-" : item.Career.ToString())</span></dd>
                    </dl>
                </div>
             </div>
        }
    }
</div>
