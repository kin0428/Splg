                                    <p><span class="fs18">@Model.JlgTeamInfo.ShortNameLeague @Model.JlgTeamInfo.Ranking</span>位</p>
                                </div>
                            }
                            @if (Model.JlgTeamInfo.BetrayalDeviation != null && Model.JlgTeamInfo.ExpectationsDeviation != null)
                            {
