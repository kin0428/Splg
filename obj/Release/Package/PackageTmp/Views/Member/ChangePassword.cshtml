@model Splg.Models.ViewModel.ChangePassViewModel
@{
    ViewBag.Title = "パスワード変更";
}
<div class="bottom">
    <div class="mem_block01 clear">
        <div class="mem_b1_1">
            <h2>パスワード変更</h2>
        </div>
        @using (Html.BeginForm("ChangePassword", "Member", FormMethod.Post, new { @id = "changePassForm" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="mem_b2_1">
                <p class="mail_title">新しいパスワードの確認</p>
                <div class="mem_forgot">
                    <p>
                        @Html.HiddenFor(model => model.Email, new { @Value = ViewBag.UserMail })
                        新しいパスワード： @Html.PasswordFor(model => model.Password, new { @class = "box250", @style = "me-mode: disabled;", autofocus = "autofocus", @id = "password" })<br/>
                        @Html.ValidationMessageFor(model => model.Password, String.Empty, new { @class = "red" })
                    </p>
                    <p>
                        新しいパスワード確認： @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "box250", @style = "me-mode: disabled;", @id = "passwordConfirm" })<br />
                        @Html.ValidationMessageFor(model => model.ConfirmPassword, String.Empty, new { @class = "red" })
                    </p>
                </div>
                <p class="board_link">
                    <input class="send_mail" type="submit" value="パスワードを変更する" />
                </p>

            </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
