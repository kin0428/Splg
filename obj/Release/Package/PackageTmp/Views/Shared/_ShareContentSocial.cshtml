        //facebook share
        var linkfb = 'http://www.facebook.com/sharer.php?u=' + window.location.href;
        document.getElementById("fb_share").setAttribute("href", linkfb);
        document.getElementById("fb_share").setAttribute("target", "_blank");
        //Twitter share
        var linkTwitter = 'https://twitter.com/home?status=' + window.location.href;
        document.getElementById("twitter_share").setAttribute("href", linkTwitter);
        document.getElementById("twitter_share").setAttribute("target", "_blank");
        //Google+ share
        var linkGoogle = 'https://plus.google.com/share?url=' + window.location.href;
        document.getElementById("google_share").setAttribute("href", linkGoogle); document.getElementById("google_share").setAttribute("target", "_blank");
        document.getElementById("google_share").setAttribute("target", "_blank");
    });
</script>

