@{
    var trackingID = string.Empty;
    var domainName = Request.Url.Host.ToLower();
    var useDomain = string.Empty;
    if (domainName == "spolog.jp")
    {
        useDomain = "auto";
        trackingID = System.Configuration.ConfigurationManager.AppSettings["TrackingIDPro"].ToString();
    }
    else
    {
        useDomain = "none";
        trackingID = System.Configuration.ConfigurationManager.AppSettings["TrackingIDStg"].ToString();
    }
}
<!--Google Analytics-->
<script>

    (function (i, s, o, g, r, a, m) {
        i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
            (i[r].q = i[r].q || []).push(arguments)
        }, i[r].l = 1 * new Date(); a = s.createElement(o),
        m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
    })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

    ga('create', '@trackingID', '@useDomain');
    ga('send', 'pageview');

</script>