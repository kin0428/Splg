@model Splg.Models.ViewModel.ChangePassViewModel
@{
    ViewBag.Title = "パスワード変更";
    Layout = "~/Views/Shared/Mobile/_Layout.cshtml";
}
<section class="block_7">
    <h3 class="sigtitle">パスワード変更</h3>
    <div class="sig-frm">
        <p class="sig-txt01">新しいパスワードの確認</p>
        <p class="sig-note"><img src="~/Content/img/tmp/reg-note.png" alt="welcome to スポログ！" /></p>
        @using (Html.BeginForm("ChangePassword", "Member", FormMethod.Post, new { @id = "changePassForm" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <dl>
                <dt>新しいパスワード<span class="fs8">※パスワードは6字以上で入力してください</span></dt>
                <dd>
                    @Html.HiddenFor(model => model.Email, new { @Value = ViewBag.UserMail })
                    @Html.PasswordFor(model => model.Password, new { autofocus = "autofocus", @id = "password" })
                    <br />@Html.ValidationMessageFor(model => model.Password, String.Empty, new { @class = "red" })
                </dd>
                <dt>新しいパスワード<span class="fs8">（確認）</span></dt>
                <dd>
                    @Html.PasswordFor(model => model.ConfirmPassword, new { @id = "passwordConfirm" })<br />
                    @Html.ValidationMessageFor(model => model.ConfirmPassword, String.Empty, new { @class = "red" })
                </dd>
            </dl>
            <p class="sig-submit">
                <input class="send_mail" type="submit" value="パスワードを変更する" />
            </p>
        }
    </div>
</section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


