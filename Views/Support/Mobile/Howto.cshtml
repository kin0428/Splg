<script>
$(document).ready(function() {
	winH = $("body").height();
	winW = $("body").width();
	$(".outside_overclay").css('height',winH);
	$(".outside_overclay").css('width',winW);
	$(".popclose").click(function() {
		$(".outside_overclay").css("display","none");
		$(".add_popup").css("display","none");
	});
	$(".change_box2").click(function() {
		$(".suport_pop1").css("display","none");
		$(".outside_overclay").css("display","block");
		$(".suport_pop1b").css("display","block");
	});
